<%= simple_form_for auth, :url => login_path, html: { class: "auth form" } do |f| %>
    <% if auth.errors.any? %>
      <div class="error-message">
        <%= auth.errors.full_messages.to_sentence.capitalize %>
      </div>
    <% end %>
  
    <h1>Username</h1>:
    <%= f.input :username, input_html: { autofocus: true } %>
    <br />
  
    <h1>Password</h1>:
    <%= f.input :password %>
    <br />
  
    <%= f.submit class: "btn btn--secondary", value: 'Login' %>
  <% end %>