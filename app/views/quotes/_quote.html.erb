<tr>
  <td><%= link_to quote.name, quote_path(quote) %></td>
  <td><%= quote.author.titleize %></td>
  <td><%= quote.category&.titleize %></td>

  <td>
    <div class="quote__actions">
      <%= button_to "Delete",
                    quote_path(quote),
                    method: :delete,
                    class: "btn btn--light" %>
      <%= link_to "Edit",
                  edit_quote_path(quote),
                  class: "btn btn--light" %>
    </div>
  </td>
</tr>
